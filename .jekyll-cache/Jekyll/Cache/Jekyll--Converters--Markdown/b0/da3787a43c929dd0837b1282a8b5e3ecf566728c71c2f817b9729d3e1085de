    <tr>
      <td><code class="language-plaintext highlighter-rouge">(c)</code></td>
      <td>Â©</td>
      <td><code class="language-plaintext highlighter-rouge">&amp;copy;</code></td>
      <td><code class="language-plaintext highlighter-rouge">"copy"</code></td>
    </tr>
    <tr>
      <td><code class="language-plaintext highlighter-rouge">(r)</code></td>
      <td>Â®</td>
      <td><code class="language-plaintext highlighter-rouge">&amp;reg;</code></td>
      <td><code class="language-plaintext highlighter-rouge">"reg"</code></td>
    </tr>
    <tr>
      <td><code class="language-plaintext highlighter-rouge">(tm)</code></td>

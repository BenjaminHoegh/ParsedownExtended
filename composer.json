{
  "name": "benjaminhoegh/parsedown-extended",
  "description": "An extension for Parsedown.",
  "keywords": [
    "markdown",
    "markdown extra",
    "parser",
    "parsedown",
    "parsedown extra"
  ],
  "homepage": "https://github.com/benjaminhoegh/parsedown-extended",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Benjamin Hoegh",
      "homepage": "https://github.com/benjaminhoegh"
    }
  ],
  "require": {
    "php": ">=7.2",
    "ext-dom": "*",
    "ext-mbstring": "*",
    "erusev/parsedown": "^1.7",
    "erusev/parsedown-extra": "^0.8.1"
  },
  "require-dev": {
    "vimeo/psalm": "^4.9"
  },
  "scripts": {
    "lint": "for file in `git ls-files '*.php' ':!:vendor/*' ':!:*/vendor/*'`; do php -l $file; done",
    "psalm": "vendor/bin/psalm --no-cache",
    "cs": "php-cs-fixer fix --dry-run --diff",
    "sa": [
        "@psalm"
    ],
    "ci": [
        "composer validate --strict",
        "@lint",
        "@sa",
        "@cs"
    ]
  },
  "config": {
      "sort-packages": true
  },
  "autoload": {
    "psr-0": {
      "parsedown-extended": ""
    }
  }
}
